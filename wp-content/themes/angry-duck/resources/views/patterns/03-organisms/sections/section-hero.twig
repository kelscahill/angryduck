{% if post.thumbnail %}
  {% set img_id = get_image(post.thumbnail).id %}
  {% set image_class = ' u-background--cover o-background-image--' ~ img_id %}
  {% set img_src = get_image(post.thumbnail).src|resize(1600,900) %}
  <style>
    .o-background-image--{{ img_id }} {
      background-image: url({{ img_src }});
    }
  </style>
{% endif %}
<section class="c-section-hero{{ image_class }}{{ is_front_page ? ' c-section-hero--front' : '' }}">
  {% include "@atoms/images/logo.twig" %}
</section>
