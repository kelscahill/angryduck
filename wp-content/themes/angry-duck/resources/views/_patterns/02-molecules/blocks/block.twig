<a href="{{ post.link }}" class="c-block js-inview" data-animation="animate__animated animate__fadeInUp">
  {% if post.get_thumbnail %}
    <picture class="c-block__image">
      <img src="{{ Image(post.get_thumbnail).src|resize(600,800) }}" alt="{{ post.title }}" />
    </picture>
  {% endif %}
  <div class="c-block__content u-spacing--half">
    <div class="c-block__heading u-spacing--quarter">
      <h3 class="o-heading--l">{{ post.title }}</h3>
      {% if post.get_preview %}
        <p>{{ post.get_preview(999, false, NULL, false, '')|striptags }}</p>
      {% endif %}
    </div>
    <hr class="o-hr--small" />
    <div class="c-block__body u-spacing">
      <p><em>Read more</em></p>
    </div>
  </div>
</a> 