<footer class="c-footer">
  <div class="c-footer__content">
    <div class="c-footer--inner l-wrap l-container" bp="grid 4@md vertical-center">
      <div class="c-footer__contact u-spacing">
        <h3>Get in touch</h3>
        <div class="c-footer__contact-details">
          {% if options.phone_number %}
            <p>{{ options.phone_number }}</p>
          {% endif %}
          {% if options.email_address %}
            <a href="mailto:{{ options.email_address }}">{{ options.email_address }}</a>
          {% endif %}
        </div>
      </div>
      <div class="c-footer__logo">
        {% include "00-atoms/images/logo-badge.twig" %}
      </div>
      <div class="c-footer__signup u-spacing">
        <h3>Join our list</h3>
        <div class="c-footer__signup-details">
          {% if options.newsletter_signup_details %}
            <p>{{ options.newsletter_signup_details }}</p>
          {% endif %}
          {% include "01-molecules/components/newsletter-signup.twig" %}
        </div>
      </div>
    </div>
  </div>
  <div class="c-footer__legal">
    <div class="c-footer--inner l-wrap l-container" bp="grid 4@md vertical-center">
      <div class="c-footer__copyright">
        <p>Copyright {{"now"|date('Y')}}. All Rights Reserved.</p>
      </div>
      <div class="c-footer__nav">
        {% include "01-molecules/navigation/footer-nav.twig" %}
      </div>
    </div>
  </div>
</footer>