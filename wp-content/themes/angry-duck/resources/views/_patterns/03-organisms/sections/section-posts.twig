{% if posts %}
  <div class="c-section-posts">
    <div class="l-grid l-grid--4up">
      {% for post in posts %}
        <div class="l-grid-item">
          {% include ['02-molecules/blocks/block-'~post.post_type~'.twig', '02-molecules/blocks/block.twig'] %}
        </div>
      {% endfor %}
    </div>
  </div>
{% endif %}